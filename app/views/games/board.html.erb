      <p style="color: <%= monster_color2.to_hex[0] %>;"> <%= Monster.where(id: @monid2).pluck(:name).first %></p>
      <h3 style="color: <%= monster_color2.to_hex[0] %>;"> Move: <%= Move.where(id: Monster.where(id:@monid2).pluck(:move_id).first).pluck(:name).first %></h3>
      <h4 style="color: <%= monster_color2.to_hex[0] %>;"><%= Move.where(id: Monster.where(id:@monid2).pluck(:move_id).first).pluck(:description).first %></h4>
    </div>
  </div>

  <div class = card_container>

  </div>


  <div class = stats_container>

    <div class = stats_container_inside>
      <p style="color: <%= monster_color2.to_hex[0] %>;"><%= Monster.where(id: @monid2).pluck(:name).first %></p>
      <p style="color: <%= monster_color2.to_hex[1] %>;">Equiped item: None</p>
